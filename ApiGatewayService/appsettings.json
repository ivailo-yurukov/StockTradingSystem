{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "orders": {
        "ClusterId": "orders",
        "Match": { "Path": "/orders/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/orders" } ]
      },
      "portfolio": {
        "ClusterId": "portfolio",
        "Match": { "Path": "/portfolio/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/portfolio" } ]
      },
      "prices": {
        "ClusterId": "prices",
        "Match": { "Path": "/prices/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/prices" } ]
      },

      // Swagger/OpenAPI endpoints for each service
      "orders-swagger": {
        "ClusterId": "orders",
        "Match": { "Path": "/swagger/orders/swagger.json" },
        "Transforms": [
          { "PathRemovePrefix": "/swagger/orders" },
          { "PathPrefix": "/swagger" }
        ]
      },
      "portfolio-swagger": {
        "ClusterId": "portfolio",
        "Match": { "Path": "/swagger/portfolio/swagger.json" },
        "Transforms": [
          { "PathRemovePrefix": "/swagger/portfolio" },
          { "PathPrefix": "/swagger" }
        ]
      },
      "prices-swagger": {
        "ClusterId": "prices",
        "Match": { "Path": "/swagger/prices/swagger.json" },
        "Transforms": [
          { "PathRemovePrefix": "/swagger/prices" },
          { "PathPrefix": "/swagger" }
        ]
      } 
    },
    "Clusters": {
      "orders": {
        "Destinations": {
          "d1": { "Address": "http://order-service:80" }
        }
      },
      "portfolio": {
        "Destinations": {
          "d1": { "Address": "http://portfolio-service:80" }
        }
      },
      "prices": {
        "Destinations": {
          "d1": { "Address": "http://price-service:80" }
        }
      }
    }
  }
}
